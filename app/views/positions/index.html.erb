<div class="columns no-print">
  <div class="column">
    <% if can? :create, Position %>
      <%= link_to new_position_path, class: "button is-success in-mobile-expand" do %>
        <span class="icon">
          <i class="ion-plus-round"></i>
        </span>
        <span>Novo cargo</span>
      <% end %>
    <% end %>
  </div>
  <div class="column">
    <% show_search_error_message(@positions, params) %>
    <%= render 'layouts/search', path: positions_path, v: attr_order(@positions) %>
  </div>
</div>

<table class="table is-striped is-fullwidth">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @positions.each do |position| %>
    <tr>
      <td><%= position.id %></td>
      <td><%= position.name %></td>
      <td class="has-text-right no-print">
        <div class="dropdown">
          <span class="button is-danger in-mobile-expand">Ações</span>
          <div class="dropdown-content">
            <% if can? :update, Position %>
              <%= link_to edit_position_path(position), class: 'button is-success in-mobile-expand' do %>
                <span class="icon">
                  <i class="ion-edit"></i>
                </span>
                <span>Editar</span>
              <% end %>
            <% end %>
            <% if can? :destroy, Position %>
              <%= link_to position_path(position), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'button is-danger in-mobile-expand' do %>
                <span class="icon">
                  <i class="ion-close"></i>
                </span>
                <span>Excluir</span>
              <% end %>
            <% end %>
          </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @positions %>
<br>
